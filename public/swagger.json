  "components": {
    "securitySchemes": {
      "jwt": {
        "name": "authorization",
        "in": "header",
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "nickname": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Post": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string"
          },
          "image": {
            "type": "string"
          }
        }
      },
      "Comment": {
        "type": "object",
        "properties": {
