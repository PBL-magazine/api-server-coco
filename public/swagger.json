  "paths": {
    "/users/signup": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "사용자 회원가입",
        "description": "email, nickname, password로 회원가입",
        "requestBody": {
          "description": "회원가입 폼 작성",
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "이메일 입력"
                  },
                  "nickname": {
                    "type": "string",
                    "description": "닉네임 입력"
                  },
                  "password": {
                    "type": "string",
                    "description": "비밀번호 입력"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request (입력 형식 확인 요망)"
          },
          "409": {
            "description": "Conflict (사용자가 이미 존재함)"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/users/signin": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "사용자 로그인",
        "description": "email, password로 로그인",
        "requestBody": {
          "description": "로그인 폼 작성",
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "이메일 입력"
                  },
                  "password": {
                    "type": "string",
                    "description": "비밀번호 입력"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Ok"
          },
          "400": {
            "description": "Bad Request (입력 형식 확인 요망)"
          },
          "401": {
            "description": "Unauthorized (로그인 실패)"
          },
          "404": {
            "description": "Not Found (사용자 정보를 찾을 수 없음)"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/users/auth": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "사용자 인증 확인",
        "description": "토큰 값으로 인증 후 유저 데이터 반환",
        "security": [
          {
            "jwt": []
          }
        ],
        "responses": {
          "200": {
            "description": "Ok"
          },
          "401": {
            "description": "Unauthorized (로그인 필요)"
          },
          "404": {
            "description": "Not Found (사용자 정보가 존재하지 않음)"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/posts": {
